 import java.util.*;
	class stringbuild1{
		public static void main(String args[]){
			StringBuilder sb=new StringBuilder("tony");
			System.out.println(sb);
			System.out.println(sb.charAt(0));
			sb.setCharAt(0,'P');
			System.out.println(sb);
			sb.insert(2,'n');
			System.out.println(sb);
			sb.delete(2,4);
			System.out.println(sb);
		}
	}